{
  "name": "dress-dock-flow-server",
  "version": "1.0.0",
  "description": "Backend server for Dress Dock Flow",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "seed": "node seed.js",
    "test": "jest --coverage --detectOpenHandles",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "vite_react_shadcn_ts": "file:.."
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "routes/**/*.js",
      "middleware/**/*.js",
      "models.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
