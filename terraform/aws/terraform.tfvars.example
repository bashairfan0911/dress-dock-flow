# Example Terraform variables file for AWS
# Copy this to terraform.tfvars and customize

aws_region         = "us-east-1"
cluster_name       = "dress-dock-cluster"
kubernetes_version = "1.28"
environment        = "production"

# VPC Configuration
vpc_cidr             = "10.0.0.0/16"
private_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
public_subnet_cidrs  = ["10.0.101.0/24", "10.0.102.0/24", "10.0.103.0/24"]
single_nat_gateway   = true  # Set to false for HA

# Node Group Configuration
node_group_min_size     = 2
node_group_max_size     = 4
node_group_desired_size = 2
node_instance_types     = ["t3.medium"]

# Passwords (change these!)
mongodb_root_password = "changeme123"
mongodb_password      = "changeme456"

# Tags
tags = {
  Project     = "dress-dock-flow"
  Environment = "production"
  ManagedBy   = "terraform"
}
